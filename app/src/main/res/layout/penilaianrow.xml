<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/kodview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kod Penilaian:-"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/kodtext2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Kod Penilaian"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/namaview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Penilaian:-"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/namatext2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Nama Penilaian"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/statusview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status:-"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/statustext2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namatext"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Status"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/editButton2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Kemaskini Data"
                android:textSize="10sp"
                android:textStyle="bold"
                app:backgroundTint="#808080" />

            <Button
                android:id="@+id/deleteButton2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Hapus Data"
                android:textSize="10sp"
                android:textStyle="bold"
                app:backgroundTint="#808080" />
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>